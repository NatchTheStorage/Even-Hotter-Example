<div class="helicopterblock">
  <h2 class="helicopterblock-title">
    $Name
  </h2>
  <div class="helicopterblock-content">

    <a class="helicopterblock-imagecontainer" target="_blank" href="$Image.URL">
    <div class="helicopterblock-image">$Image.Fit(1024,768)</div>
    </a>
    <div class="helicopterblock-textcontainer">
      <div class="helicopterblock-description">$Description</div>
      <div class="helicopterblock-footer">$Footer</div>
    </div>
  </div>
</div>